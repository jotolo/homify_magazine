<%- model_class = Article -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<div class="col-md-4 col-md-offset-4">
  <%= smart_listing_controls_for(:articles, {class: 'form-inline text-right'}) do %>
      <div class=" input-group">
        <%= text_field_tag :filter, '', class: 'search form-control', placeholder: 'Search...', autocomplete: :off %>

        <span class="input-group-btn">
            <%= button_tag class: 'btn btn-primary', data: {disable_with: '<i class="fa fa-spinner fast-spin" aria-hidden="true"></i>'} do -%>
              <i class="fa fa-search" aria-hidden="true"></i>
            <% end -%>
          </span>
      </div>
  <% end %>

</div>
<%= smart_listing_render(:articles) %>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_article_path,
            :class => 'btn btn-primary' %>

